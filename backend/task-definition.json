{
    "family": "twitch-stats-task",
    "containerDefinitions": [
      {
        "name": "twitch-stats",
        "image": "913324685112.dkr.ecr.eu-west-1.amazonaws.com/twitch-stats:latest",
        "cpu": 0,
        "essential": true,
        "environment": [
          {
            "name": "CLIENT_SECRET",
            "value": "arn:aws:ssm:eu-west-1:913324685112:parameter/CLIENT_SECRET"
          },
          {
            "name": "PORT",
            "value": "arn:aws:ssm:eu-west-1:913324685112:parameter/PORT"
          },
          {
            "name": "CLIENT_ID",
            "value": "arn:aws:ssm:eu-west-1:913324685112:parameter/CLIENT_ID"
          },
          {
            "name": "MONGO_URI",
            "value": "arn:aws:ssm:eu-west-1:913324685112:parameter/MONGO_URI"
          }
        ],
        "portMappings": [
          {
            "containerPort": 80,
            "hostPort": 80,
            "protocol": "tcp"
          },
          {
            "containerPort": 8080,
            "hostPort": 8080,
            "protocol": "tcp"
          }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-create-group": "true",
            "awslogs-group": "/ecs/twitch-stats-task",
            "awslogs-region": "eu-west-1",
            "awslogs-stream-prefix": "ecs"
          }
        }
      }
    ],
    "executionRoleArn": "arn:aws:iam::913324685112:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
      "FARGATE"
    ],
    "cpu": "512",
    "memory": "1024"
  }
  